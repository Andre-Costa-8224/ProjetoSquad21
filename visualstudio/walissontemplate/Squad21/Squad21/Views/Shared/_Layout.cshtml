<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cavaleiro dos Sonhos</title>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <!-- Navbar brand -->
            <a class="navbar-brand" href="#">Cavaleiros dos Sonhos</a>

            <!-- Toggle button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Left links -->
                <!-- Left links -->
                <div class="navbar-collapse  justify-content-center">
                    <!-- Left links -->
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item nav-link active">
                            @Html.ActionLink("Início", "Index", "Home")
                        </li>
                        <li class="nav-item nav-link  active">
                            @Html.ActionLink("Idioma", "Idioma", "Home")
                        </li>
                        <li class="nav-item nav-link active">
                            @Html.ActionLink("Doações", "Doacoes", "Home")
                        </li>
                        <li class="nav-item nav-link active">
                            @Html.ActionLink("Contato", "Contato", "Home")
                        </li>
                        <li class="nav-item nav-link active">
                            @Html.ActionLink("Sobre", "Sobre", "Home")
                        </li>


                    </ul>
                    <!-- Left links -->
                </div>
                <div class="d-flex align-items-center">

                    @if (User.Identity.IsAuthenticated)
                    {


                        <div class="btn-group" style="padding-right:80px">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu pull-right" aria-labelledby="dropdownMenuButton1">
                                <li class="dropdown-item"> @Html.ActionLink("Alterar senha", "AlterarSenha", "Perfil")</li>
                                <li class="dropdown-item">@Html.ActionLink("Sair", "Logout", "Autenticacao")</li>

                            </ul>
                        </div>


                    }
                    else
                    { <ul class="navbar-nav mb-2 mb-lg-0">
                            <li class="nav-item nav-link  active">@Html.ActionLink("Login", "Login", "Autenticacao")</li>
                            <li class="nav-item nav-link active">@Html.ActionLink("Cadastre-se", "Cadastrar", "Autenticacao")</li>
                    </ul>
                            }
                    </div>
            </div>
            <!-- Collapsible wrapper -->
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->
   
    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p class="text-center"><strong>&copy; @DateTime.Now.Year - Cavaleiro dos Sonhos</strong></p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
